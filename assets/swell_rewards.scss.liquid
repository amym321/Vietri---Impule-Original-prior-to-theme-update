            font-style: normal;
            font-stretch: normal;
            line-height: normal;
            letter-spacing: normal;
            text-align: center;
          }
          .current-status {
            position: absolute;
            top: -25px;
            left: 0;
            right: 0;
            margin: 0 auto;
            font-size: 14px;
            font-weight: 500;
            font-style: normal;
            font-stretch: normal;
            line-height: normal;
            letter-spacing: normal;
            text-align: center;
            color: $colorBlack;
            @media($min: $small) {
              font-size: 16px;
            }
            @media($min: $medium) {
              font-size: 18px;
            }
          }
          .next-status {
            position: absolute;
            top: -50px;
            left: 0;
            right: 0;
            margin: 0 auto;
            font-size: 14px;
            font-weight: 500;
            font-style: normal;
            font-stretch: normal;
            line-height: normal;
            letter-spacing: normal;
            text-align: center;
            color: $colorBlack;
            @media($min: $small) {
              font-size: 16px;
