  /* Vip Table Section Code Start */
  .vip-table-section {
    text-align: center;
    margin-bottom: 70px;
    @media ($min: $small) {
      margin-bottom: 100px;
    }
    @media ($min: $medium) {
      margin-bottom: 70px;
    }
    .swell-heading-section {
      margin-bottom: 70px;
    }
    .swell-tier-status {
      display: block;
      margin-bottom: 35px;
      @media($min: $medium) {
        display: none;
      }
