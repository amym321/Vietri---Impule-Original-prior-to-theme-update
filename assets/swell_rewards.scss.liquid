@-ms-viewport {
  width: device-width;
}

html {
  box-sizing: border-box;
  -ms-overflow-style: scrollbar;
}

*,
*::before,
*::after {
  box-sizing: inherit;
}

body {
  margin: 0;
}

ul {
  li {
    list-style-type: none;
  }
}

/* Colors Variable Start */
$colorWhite: #fff;
$colorBlack: #000;
$colorGreen: #00594c;
$bordercolorgrey: #acacac;
/* Colors Variable End */

$min: min-width;
$small: 480px;
$medium: 768px;
$large: 1024px;

@font-face {
  font-family: 'swell-rewards';
  src:  url('swell-rewards.eot?dj6bax');
  src:  url('swell-rewards.eot?dj6bax#iefix') format('embedded-opentype'),
    url('swell-rewards.ttf?dj6bax') format('truetype'),
    url('swell-rewards.woff?dj6bax') format('woff'),
    url('swell-rewards.svg?dj6bax#swell-rewards') format('svg');
  font-weight: normal;
  font-style: normal;
}

[class^="swell-icon-"], [class*=" swell-icon-"] {
  font-family: 'swell-rewards' !important;
  speak: none;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.swell-icon-sms:before {
  content: "\e904";
}
.swell-icon-copy-link:before {
  content: "\e900";
}
.swell-icon-fb:before {
  content: "\e901";
}
.swell-icon-messenger:before {
  content: "\e902";
}
.swell-icon-twitter:before {
  content: "\e903";
}

/* Generic Buttons Code Start */
.swell-link-list {
  text-align: center;
  .swell-link {
    max-width: 300px;
    margin: 0 auto 1em;
    width: 100%;
    display: block;
    @media ($min: $small) {
      max-width: 200px;
    }
    @media ($min:$medium) {
      display: inline-block;
      margin: 0 0.5em 1em;
    }
    a,
    .swell-link-history {
      cursor: pointer;
      background-color: transparent;
      font-size: 16.5px;
      font-weight: bold;
      font-style: normal;
      font-stretch: normal;
      line-height: normal;
      letter-spacing: normal;
      text-align: center;
      color: $colorWhite;
      display: block;
      width: 100%;
      padding: 12px 5px;
      text-decoration: none;
      &:hover {
        border-color: #008c78;
      }
      @media ($min: $small) {
        font-size: 20.5px;
      }
    }
  }
}


/* Generic Buttons Code End */
