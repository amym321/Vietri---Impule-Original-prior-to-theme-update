                font-style: normal;
                font-stretch: normal;
                line-height: normal;
                letter-spacing: normal;
                text-align: center;
                border-radius: 4px;
                color: $colorGreen;
                padding: 10px 5px;
                @media ($min: $small) {
                  font-size: 18px;
                }
                @media ($min: $medium) {
                  font-size: 16px;
                  max-width: 160px;
                  padding: 12px 5px;
                }
