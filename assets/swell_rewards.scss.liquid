  /* How-It-Work Section Code End */
  /* Campaign Section Code Start */
  .campaign-section {
    text-align: center;
    margin-bottom: 5px;
    @media ($min: $medium) {
      margin-bottom: 10px;
    }
    .swell-campaign-list {
      display: flex;
      align-items: flex-start;
      justify-content: center;
      flex-wrap: wrap;
      margin-right: -15px;
      &.logged-in {
        .swell-campaign {
          .swell-campaign-content {
            cursor: pointer;
          }
        }
      }
      .swell-campaign {
        flex-basis: 50%;
        margin: 0;
        &.swell-custom-campaign {
          .swell-campaign-content {
            cursor: default;
            background-color: #9abfaa;
            .swell-custom-campaign-image {
              .swell-campaign-logo {
                max-height: 220px;
                min-height: 220px;
                height: 100%;
                -o-object-fit: cover;
                object-fit: cover;
                -o-object-position: center top;
                object-position: center top;
                vertical-align: -webkit-baseline-middle;
                @media($min: $small) {
                  max-height: 310px;
                  min-height: 310px;
                }
                @media($min: $medium) {
                  max-height: 380px;
                  min-height: 380px;
                }
              }
            }
          }
        }
        .swell-campaign-content {
          margin-right: 10px;
          margin-bottom: 10px;
          display: flex;
          align-items: center;
          justify-content: center;
          flex-direction: column;
          .swell-campaign-image {
            position: relative;
            .swell-campaign-image-content {
              max-height: 220px;
              min-height: 220px;
              height: 100%;
              -o-object-fit: cover;
              object-fit: cover;
              -o-object-position: center top;
              object-position: center top;
              vertical-align: -webkit-baseline-middle;
              @media($min: $small) {
                max-height: 310px;
                min-height: 310px;
              }
              @media($min: $medium) {
                max-height: 380px;
                min-height: 380px;
              }
            }
            .swell-campaign-content-holder {
              background-color: $colorGreen;
              padding: 20px 0;
              position: absolute;
              left: 0;
              right: 0;
              bottom: 0;
              .swell-campaign-type {
                font-size: 13px;
                font-weight: 500;
                font-style: normal;
                font-stretch: normal;
                line-height: normal;
                letter-spacing: normal;
                text-align: center;
                color: $colorWhite;
                text-transform: uppercase;
                max-width: 140px;
                min-height: 28px;
                margin: 0 auto 10px;
                @media ($min: $small) {
                  font-size: 16px;
                  max-width: 200px;
                  margin: 0 auto 15px;
                }
                @media ($min: $medium) {
                  font-size: 20px;
                  max-width: 100%;
                }
              }
              .swell-campaign-value {
                max-width: 140px;
                width: 100%;
                margin: 0 auto;
                background-color: $colorWhite;
