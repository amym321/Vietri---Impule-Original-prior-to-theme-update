.custom-field--desc {
    font-weight: 300;
    text-align: center;
    font-size: 0.8em;
    display: block;
    width: 100%;
    font-style: italic;
    line-height: 30px;
}
.collapsible-content__inner .rte {
    h2 {
        margin-top:0 !important;
    }
}
.product-dimensions {
    padding-bottom:10px;
}

#BIS_trigger,
.BIS_trigger {
    &.btn.return-link {
        width: 100%;
        margin-top: 10px;
        border: 0;
        border-radius: 1px;
        padding: 16px 20px;
        font-size: 13px;
    }
}
.bis-reset.bis-edge-right.bis-edge-top.bis-rotate-270 {
    display: none;
    opacity: 0;
}
.yotpo.yotpo-pictures-widget {
    display:block;
}
.yotpo {
    direction: LTR;
    clear: both;
    text-align: center;
    margin: 0 auto;
    display: table;
}
span.yotpo-stars {
    display: flex;
}
.yotpo .yotpo-first-review .yotpo-first-review-stars .yotpo-icon-star {
    color: #ff4f33;
    font-size: 22px;
}


@media only screen and (min-width: 769px) {
    .main-widget .write-question-review-buttons-container {
        float: none;
        padding-right: 10px !important;
    }
}
.yotpo.yotpo-main-widget {
    background-color: transparent !important;
    margin-top: 30px;
}
.yotpo .text-m {
    font-size: 13px;
    float: none;
    width: 100%;
    display: flex;
}
.yotpo .font-color-gray-darker {
    color: #00594c;
}
.yotpo-pictures-widget .yotpo-display-wrapper {
    overflow: hidden;
    position: relative;
    margin: 0 auto;
    text-align: center;
    display: table;
    width: 100%;
  	letter-spacing: 0 !important;
}
.yotpo div, .yotpo p, .yotpo a, .yotpo img, .yotpo i, .yotpo strong, .yotpo sup, .yotpo ul, .yotpo li, .yotpo form, .yotpo label {
	line-height: 10px;
}
.yotpo-review-wrapper {
    text-align: left !important;
    line-height: 20px !important;
}

// Klarna Widget
klarna-placement iframe {
    margin: 0 auto;
    text-align: center;
}
