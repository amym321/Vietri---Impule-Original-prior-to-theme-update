#shopify-section-our-story, #shopify-section-our-mission,  #shopify-section-our-craft,  #shopify-section-our-artisans {
    @media only screen and (min-width: 769px){
        h1, .h1, h2, .h2, h3, .h3, h4, .h4, h5, .h5, h6, .h6 {
            margin: 15px 0 15px;
        }
    }
    h2, .h2{
        margin:0 auto;
    }
    .feature-row__text .rte{
        p{
            font-size:15px;
        }
    }
    .index-section {
        @media only screen and (min-width: 769px){
            margin: 30px 0;
        }
    }
    .feature-row__item {
        &.feature-row__text--right, &.feature-row__text--left{
            @media only screen and (max-width: 991px){
                text-align:center;
            }
        }
    }
    .page-width.page-content.page-content--with-blocks {
        padding-top: 30px;
    }
    h1.section-header__title {
    font-family: 'Avenir', sans-serif;
    font-weight: 100;
    letter-spacing: 0.05em;
    line-height: 1;
    text-transform: uppercase;
    }
    .section-header {
    margin-bottom: 30px;
    }
    .our-story-top.hide-mobile {
    width: 100%;
    border-top: 1px solid #e8e8e1;
    border-bottom: 1px solid #e8e8e1;
    display: flex;
    padding: 0;
     @media only screen and (max-width: 768px) {
       display:none;
    }
    ul.our-story-wrap{
        list-style: none;
        display: flex;
        width: 100%;
        margin: 30px auto 25px;
        max-width: 900px;
      li{
        flex-direction: row;
        align-items: center;
        justify-content: center;
        display: flex;
        a:hover{
            color:#000;
            &:after{
                content: '';
                display: block;
                bottom: 4px;
                left: 0;
                right: 0;
                border-bottom: 2px solid #000;
                position:absolute;
                width:100%;
            }
        }
        a{
            text-transform: uppercase;
            letter-spacing:2px;
            transition: none;
            position: relative;
            padding-bottom: 5px;
            &:after{
                right:0;
            }
            &.active{
                color:#00594c;
                &:after{
                        content: '';
                        display: block;
                        bottom: 4px;
                        left: 0;
                        right: 100%;
                        border-bottom: 2px solid #00594c;
                        transition: right 0.5s;
                        position:absolute;
                        width:100%;
                    }
                }
            }
        }
    }
  }
}

#video-footer .product__thumb-play {
    position: absolute;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    background-color: #000;
    border-radius: 100px;
    padding: 7px;
    z-index: 1;
    opacity: 1;
    transition: opacity 0.5s ease;
    font-size: 0;
    border: 2px solid #fff
}

#video-footer .image-row {
    position: relative;
    min-height: 1px;
    float: left;
    width: 33.33%;
    background: #000;
}

@media only screen and (max-width: 768px) {
    #video-footer .image-row {
        width: 100%
    }
}

#video-footer .image-row__placeholder {
    cursor: pointer;
    width: 100%;
}

#video-footer .image-row__placeholder:hover .product__thumb-play {
    background-color: #00594c;
    border: 2px solid #fff
}

